---
layout: base-layout.njk
pagination:
  data: collections.allPosts
  size: 3
  reverse: true
  alias: posts
---
{% for post in posts %}
  <article>
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>
    {{ post.date }}
  </article>
{% endfor %}

<div>
    <a href="{% if not posts.first %}{{ pagination.href.previous | url }}{% else %}javascript:void(0){% endif %}">Previous</a>
    <a href="{% if not posts.last %}{{ pagination.href.next | url }}{% else %}javascript:void(0){% endif %}">Next</a>
</div>